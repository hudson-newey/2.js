{
  "include": ["src/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "dist/", "*.d.ts"],
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "commonjs",
    "lib": ["ES2022", "DOM"],
    "skipLibCheck": true,
    "outDir": "dist/",
    "newLine": "lf",

    /* Bundler mode */
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "noEmit": true,
    "removeComments": true,
    "sourceMap": false,
    "declaration": true,
    "declarationMap": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
  },
}

