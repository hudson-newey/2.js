{
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "dist/", "*.d.ts"],
  "compilerOptions": {
    "baseUrl": "./",
    "useDefineForClassFields": true,
    "module": "None",
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "outDir": "dist/",
    "newLine": "lf",

    /* Bundler mode */
    "allowImportingTsExtensions": true,
    "isolatedModules": false,
    "noEmit": true,
    "removeComments": true,
    "sourceMap": false,
    "declaration": false,
    "declarationMap": false,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
  },
}
