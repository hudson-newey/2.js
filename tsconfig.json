{
    "include": ["src/**/*", "tests/**/*"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "baseUrl": "src",
        "target": "ES5",
        "newLine": "lf",
        "module": "UMD",
        "lib": ["ES2023", "DOM"],
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "strict": true,
        "declaration": true,
        "declarationMap": true,
        "moduleResolution": "node",
        "outDir": "./dist/",
        "paths": {
            "@/*": ["src/*"]
        }
    }
}
